
{%- style -%}
  
{% if section.settings.bg != blank %}
    .section_bg_{{ section.id }} {
      background-image:url({{section.settings.bg | image_url}});
    background-size: cover;
    background-attachment: unset;
    background-repeat: no-repeat;
    background-position: bottom;
    } 
  {% endif %}
{% if section.settings.bg_mobile != blank %}
  @media screen and (max-width: 750px) {
    .section_bg_{{ section.id }} {
      background-image:url({{section.settings.bg_mobile | image_url}});
    }
  }
  {% endif %}
  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image_slider_custom section_bg_{{ section.id }} {{ section.settings.custom_class }}"{% if section.settings.custom_id != blank %} id="{{ section.settings.custom_id }}"{% endif %}
style="background-color:{{ section.settings.bg_color | default:'transparent' }}">
   <div class="container_hk section-{{ section.id }}-padding">
   
       {% if section.settings.heading != blank %}
<div class="images_top_slider center">
      <h2 class="images_top_slider_heading h2">{{ section.settings.heading }}</h2>
     </div>
       {% endif %}

     <div class="images_center left">


       <div class="marquee">
  <div class="track">
    <div class="content">
      {%- for i in (1..3) -%}
        {%- for block in section.blocks -%}
              {%- if block.settings.image != blank -%}
       <div class="images_slider_item">
          <div class="image_wrapper_custom">
           <img src="{{ block.settings.image | image_url }}" width="auto" height="auto" loading="eager" alt="{{ block.settings.image.alt }}" fetchrpriority="high">
                </div>
          <div class="image_wrapper_custom">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
  <path d="M9.29062 0.700195L11.5594 6.83143L17.6906 9.10019L11.5594 11.369L9.29062 17.5002L7.02186 11.369L0.890625 9.10019L7.02186 6.83143L9.29062 0.700195Z" fill="black"/>
</svg>
                </div>
          {%- if block.settings.image2 != blank -%}
          <div class="image_wrapper_custom">
           <img src="{{ block.settings.image2 | image_url }}" width="auto" height="auto" loading="eager" alt="{{ block.settings.image2.alt }}" fetchrpriority="high">
                </div>
          <div class="image_wrapper_custom">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
  <path d="M9.29062 0.700195L11.5594 6.83143L17.6906 9.10019L11.5594 11.369L9.29062 17.5002L7.02186 11.369L0.890625 9.10019L7.02186 6.83143L9.29062 0.700195Z" fill="black"/>
</svg>
                </div>
              {%- endif -%}
           </div>
        
              {%- endif -%}
          
       <div class="images_slider_item">
           </div>
       {% endfor %}
       {% endfor %}
    <style>
      
.marquee {
  position: relative;
  width: 100vw;
  max-width: 100%;
  height: 57px;
  overflow-x: hidden;
}

.track {
  position: absolute;
  white-space: nowrap;
  will-change: transform;
  animation: marquee 35s linear infinite;
}
.images_slider_item {
    display: flex !important;
    align-items: center;
    min-width: fit-content;
}
.image_wrapper_custom img {
    //min-width: fit-content;
}
.marquee .content {
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    min-width: fit-content !important;
}
@keyframes marquee {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}
@media (max-width:915px) {
  .marquee {
    height: 35px;
}

.track {
  animation: marquee 25s linear infinite;
}
}
    </style>
    </div>
  </div>
</div>
       <div class="images_slider_main slider_{{ section.id }} same_height_slider" style="display:none;">
        {%- for i in (i..5) -%}
        {%- for block in section.blocks -%}
              {%- if block.settings.image != blank -%}
       <div class="images_slider_item">
          <div class="image_wrapper_custom">
           <img src="{{ block.settings.image | image_url }}" width="auto" height="auto" loading="eager" alt="{{ block.settings.image.alt }}" fetchrpriority="high">
                </div>
          <div class="image_wrapper_custom">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
  <path d="M9.29062 0.700195L11.5594 6.83143L17.6906 9.10019L11.5594 11.369L9.29062 17.5002L7.02186 11.369L0.890625 9.10019L7.02186 6.83143L9.29062 0.700195Z" fill="black"/>
</svg>
                </div>
          {%- if block.settings.image2 != blank -%}
          <div class="image_wrapper_custom">
           <img src="{{ block.settings.image2 | image_url }}" width="auto" height="auto" loading="eager" alt="{{ block.settings.image2.alt }}" fetchrpriority="high">
                </div>
          <div class="image_wrapper_custom">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
  <path d="M9.29062 0.700195L11.5594 6.83143L17.6906 9.10019L11.5594 11.369L9.29062 17.5002L7.02186 11.369L0.890625 9.10019L7.02186 6.83143L9.29062 0.700195Z" fill="black"/>
</svg>
                </div>
              {%- endif -%}
           </div>
        
              {%- endif -%}
          
       <div class="images_slider_item">
           </div>
       {% endfor %}
       {% endfor %}
       </div>
     </div>
        <div class="slider_navigations center" style="display:none;">
  <div class="slider_button_custom prev_{{ section.id }}"><svg xmlns="http://www.w3.org/2000/svg" width="29" height="29" viewBox="0 0 29 29" fill="none">
